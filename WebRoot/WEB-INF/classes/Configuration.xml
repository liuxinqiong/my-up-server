<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>  
	<settings>
		<setting name="lazyLoadingEnabled" value="true"/>
		<setting name="aggressiveLazyLoading" value="false"/>
		<setting name="cacheEnabled" value="true"/>
	</settings>
	
	<typeAliases >
		<typeAlias type="cn.com.entity.User" alias="user"/>
		<typeAlias type="cn.com.entity.Category" alias="category"/>
		<typeAlias type="cn.com.entity.Icon" alias="icon"/>
		<typeAlias type="cn.com.entity.DetailInfo" alias="detailInfo"/>
		<typeAlias type="cn.com.entity.TaskProjectInfo" alias="taskProjectInfo"/>
		<typeAlias type="cn.com.entity.TaskDetailInfo" alias="taskDetailInfo"/>
		<typeAlias type="cn.com.entity.DayGram" alias="dayGram"/>
		<typeAlias type="cn.com.entity.SystemSetting" alias="systemSetting"/>
		<typeAlias type="cn.com.entity.DayTask" alias="dayTask"/>
	</typeAliases>

	<mappers>
		<mapper resource="cn/com/entity/Test.xml" />
		<mapper resource="cn/com/entity/User.xml" />
		<mapper resource="cn/com/entity/Category.xml" />
		<mapper resource="cn/com/entity/Icon.xml" />
		<mapper resource="cn/com/entity/DetailInfo.xml" />
		<mapper resource="cn/com/entity/TaskProjectInfo.xml" />
		<mapper resource="cn/com/entity/TaskDetailInfo.xml" />
		<mapper resource="cn/com/entity/DayGram.xml" />
		<mapper resource="cn/com/entity/SystemSetting.xml" />
		<mapper resource="cn/com/entity/DayTask.xml" />
	</mappers>
	
</configuration>